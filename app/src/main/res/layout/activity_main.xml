<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBFF"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp"
        app:title="Popular Courses"
        app:titleTextColor="#2B7B8C"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:menu="@menu/toolbar_menu" />

    <!-- Horizontal ScrollView for Categories -->
    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:paddingVertical="8dp"
        android:background="#FFFFFF"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <!-- Rounded category buttons -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="All"
                android:backgroundTint="#2B7B8C"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:background="@drawable/category_button_selector" />

            <Button
                android:id="@+id/btnReactJs"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="React js"
                android:backgroundTint="#2B7B8C"
                android:textColor="#888888"
                android:layout_marginEnd="10dp"
                android:background="@drawable/category_button_selector" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/category_button_selector"
                android:backgroundTint="#2B7B8C"
                android:text="javascript"
                android:textColor="#888888" />

            <Button
                android:layout_width="99dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/category_button_selector"
                android:backgroundTint="#2B7B8C"
                android:text="backend"
                android:textColor="#888888" />

            <!-- Ajoutez d'autres boutons ici -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView for Course Items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/categoryScrollView"
        android:layout_above="@id/bottomNavigationView"
        android:padding="16dp"
        tools:listitem="@layout/item_course" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="labeled"
        android:background="#FFFFFF"
        app:itemIconTint="#2B7B8C"
        app:itemTextColor="#2B7B8C"
        app:menu="@menu/bottom_navigation_menu" />



</RelativeLayout>

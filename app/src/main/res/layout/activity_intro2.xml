<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <TextView
        android:id="@+id/skipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/ic_jost"
        android:text="Skip"
        android:textColor="#202244"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Get Online Certificate"
        android:textSize="24sp"
        android:textColor="#202244"
        android:fontFamily="@font/ic_jost"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:text="Analyse your scores and Track your results"
        android:textColor="#545454"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <!-- Pagination Indicators -->
    <!-- Conteneur horizontal pour les indicateurs de pagination et le bouton -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Indicateurs de pagination -->
        <LinearLayout
            android:id="@+id/paginationIndicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/indicator1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/paginationoval"
                android:contentDescription="indicator1"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/indicator2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/paginationoval"
                android:contentDescription="indicator2"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/indicator3"
                android:layout_width="20dp"
                android:layout_height="8dp"
                android:background="@drawable/rectangle"
                android:contentDescription="indicator3" />
        </LinearLayout>

        <!-- Bouton Get Started -->
        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#2B7B8C"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:fontFamily="@font/ic_jost"
            android:text="Get Started"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:id="@+id/subtitleImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:contentDescription="to75do"
        android:src="@drawable/home"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"/>

</RelativeLayout>

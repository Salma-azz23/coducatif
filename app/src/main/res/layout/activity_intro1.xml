<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">
    <TextView
        android:id="@+id/skipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/ic_jost"
        android:text="skip"
        android:textColor="#202244"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap,TouchTargetSizeCheck" />
    <LinearLayout
        android:id="@+id/paginationIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="57dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/indicator1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/paginationoval"
            android:contentDescription="to5do"
            tools:ignore="ImageContrastCheck" />
        <ImageView
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangle"
            android:contentDescription="to6do" />

        <ImageView
            android:id="@+id/indicator3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/paginationoval"
            android:contentDescription="t4odo"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Learn from Anytime"
        android:textSize="24sp"
        android:textColor="#202244"
        android:fontFamily="@font/ic_jost"
        android:textStyle="bold" />

    <!-- Text de sous-titre -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:text="Booked or Same the Lectures for Future"
        android:textColor="#545454"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="bold"/>


    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="nexte"
        android:src="@drawable/button" />
    <ImageView
        android:id="@+id/subtitleImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:contentDescription="to75do"
        android:src="@drawable/home"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"/>

</RelativeLayout>
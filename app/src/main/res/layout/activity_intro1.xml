<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <!-- Bouton "Passer" en haut à droite -->
    <TextView
        android:id="@+id/skipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/ic_jost"
        android:text="Passer"
        android:textColor="#202244"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Image centrale -->
    <ImageView
        android:id="@+id/centralImage"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/game_character" />

    <!-- Indicateurs de pagination -->
    <LinearLayout
        android:id="@+id/paginationIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="57dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/indicator1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/paginationoval"
            android:contentDescription="to5do"
            tools:ignore="ImageContrastCheck" />
        <ImageView
            android:id="@+id/indicator2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangle"
            android:contentDescription="to6do" />

        <ImageView
            android:id="@+id/indicator3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/paginationoval"
            android:contentDescription="t4odo"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <!-- Titre -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ic_jost"
        android:text="Apprenez à tout moment"
        android:gravity="center"
        android:textColor="#2B7B8C"
        android:textSize="27sp"
        android:textStyle="bold" />

    <!-- Sous-titre -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Réservez ou sauvegardez des conférences pour l'avenir"
        android:gravity="center"
        android:textColor="#181616"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Bouton Suivant -->
    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#F5F9FF"
        android:contentDescription="nexte"
        android:src="@drawable/button" />
</RelativeLayout>

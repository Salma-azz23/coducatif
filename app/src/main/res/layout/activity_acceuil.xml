<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hi, Student"
                android:textColor="#2B7B8C"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/invite_friends_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_person_add_alt_1_24"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                app:tint="#2B7B8C" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="What would you like to learn Today?\nSearch Below."
            android:textColor="#333"
            android:textSize="14sp" />

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/search_bar_bg"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:elevation="4dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                app:tint="#8A8A8A" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search for.."
                android:background="@null"
                android:padding="8dp"
                android:textColor="#000"
                android:textColorHint="#8A8A8A"
                android:inputType="text" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_filter_24"
                app:tint="#8A8A8A" />
        </LinearLayout>

        <!-- React Introduction Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/cap12"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction to React JS"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/10 Completed"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:textAllCaps="false"
                android:backgroundTint="#2B7B8C"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:elevation="2dp" />
        </LinearLayout>

        <!-- Popular Courses -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Courses"
                android:textColor="#2B7B8C"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/see_all_popular_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All >>"
                android:textColor="#2B7B8C"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_marginStart="170dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/interactive_ui_card"
                    android:layout_width="230dp"
                    android:layout_height="208dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/htcs" />


                    <TextView
                        android:id="@+id/Category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/category_background"
                        android:fontFamily="sans-serif-medium"
                        android:padding="4dp"
                        android:text="React JS"
                        android:textColor="#FF5722"
                        android:textSize="12sp" />

                    <!-- Course Name -->
                    <TextView
                        android:id="@+id/Course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Interactive UI Development"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Price and Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="7058/-"
                            android:textColor="#2B7B8C"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/Rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⭐ 4.2   |  7830 Std"
                            android:textColor="#888"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:layout_marginRight="8dp"
                    android:elevation="4dp">



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/js" /> <!-- Image de votre choix -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JavaScript"
                        android:textColor="#FF5722"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/category_background"
                        android:padding="4dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advertisement Design"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="400/-"
                            android:textColor="#2B7B8C"
                            android:textSize="14sp"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⭐ 4.0 | 4200 Std"
                            android:textColor="#888"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Top Mentors Section -->
        <!-- Top Mentors Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Mentors"
                android:textColor="#2B7B8C"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/see_all_mentors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All >>"
                android:textColor="#2B7B8C"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold" />
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Mentor 1 -->
                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/john"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/circle_bg"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Mentor 2 -->
                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ka"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/circle_bg"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karim"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Mentor 3 -->
                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/yous"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/circle_bg"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Youssef"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Mentor 4 -->
                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/cap7"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/circle_bg"
                        android:clipToOutline="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fouad"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>

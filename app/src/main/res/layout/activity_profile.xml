<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8460DCFD"
    android:padding="16dp"
> <!-- Espace ajouté en haut -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="24dp"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="117dp"
                android:layout_height="111dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle_background1"
                android:contentDescription="Profile Image"
                android:scaleType="centerCrop"
                android:src="@drawable/client2" />

            <TextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chaimae Benali"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:gravity="center"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvNickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chaimaebenali_67185"
                android:textSize="14sp"
                android:textColor="#9CA3AF"
                android:gravity="center" />
        </LinearLayout>

        <!-- Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Date of Birth Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#165562"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date de naissance :"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvDob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19/06/2024"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Phone Number Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone"
                    android:tint="#165562"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numéro de téléphone :"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0624979263"
                    android:textSize="16sp"
                    android:textColor="#374151"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier le profil"
            android:textSize="16sp"
            android:backgroundTint="#165562"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:elevation="6dp"
            android:drawableStart="@drawable/ic_profile"
            android:background="@drawable/rounded_button"
            android:drawablePadding="8dp"
  />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8FAFD">

    <!-- Back Arrow and Text Section -->
    <LinearLayout
        android:id="@+id/backArrowSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="#165562"
            android:contentDescription="Back Arrow" />

        <TextView
            android:id="@+id/inviteFriendsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Invite Friends"
            android:textSize="20sp"
            android:textColor="#165562"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Top Image Section (Search Image) -->
    <ImageView
        android:id="@+id/top_image"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@id/backArrowSection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:clickable="true"
        android:contentDescription="Search Icon"
        android:elevation="2dp"
        android:focusable="true"

        android:scaleType="fitCenter"
        android:src="@drawable/search" />

    <!-- Main Image Section -->
    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/top_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:contentDescription="Main Image"
        android:src="@drawable/invite_friendsimg"
        android:scaleType="fitCenter"
        android:elevation="6dp"
        android:background="#8460DCFD" />

    <!-- Share Invite Text -->
    <TextView
        android:id="@+id/shareInviteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Share Invite Via"
        android:textSize="18sp"
        android:textColor="#165562"
        android:textStyle="bold"
        android:fontFamily="sans-serif" />

    <!-- Social Media Icons Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shareInviteText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/baseline_whatsapp_24"
            android:contentDescription="WhatsApp"
            android:background="@drawable/circle_background1"
            android:padding="12dp"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/google"
            android:contentDescription="Google Plus"
            android:background="@drawable/circle_background1"
            android:padding="12dp"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/facebook"
            android:contentDescription="Facebook"
            android:background="@drawable/circle_background1"
            android:padding="12dp"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/twitter"
            android:contentDescription="Twitter"
            android:background="@drawable/circle_background1"
            android:padding="12dp"
            android:layout_margin="8dp" />
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#165562"> <!-- Fond vert -->

    <!-- Retour et titre du jeu -->
    <LinearLayout
        android:id="@+id/backArrowSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="#FFFFFF"
            android:contentDescription="Back Arrow" />

        <TextView
            android:id="@+id/gameTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Inviter des amis"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Bannière du jeu -->
    <ImageView
        android:id="@+id/top_image"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@id/backArrowSection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="Game Banner"
        android:scaleType="fitCenter" />

    <!-- Section principale - image ou animation du jeu -->
    <!-- Section principale - image ou animation du jeu -->
    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/top_image"
        android:layout_marginTop="24dp"
        android:contentDescription="Main Game Image"
        android:elevation="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/invitefriend" />
    <!-- Fond légèrement transparent -->

    <!-- Texte d'invitation -->
    <TextView
        android:id="@+id/shareInviteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Invitez vos amis à jouer !"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif" />

    <!-- Section des icônes sociales -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shareInviteText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/baseline_whatsapp_24"
            android:contentDescription="WhatsApp"
            android:background="@drawable/circle_background1"
            android:padding="12dp"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/Google"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/google"
            android:contentDescription="Google"
            android:background="@drawable/circle_background1"
            android:padding="12dp"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/facebook"
            android:contentDescription="Facebook"
            android:background="@drawable/circle_background1"
            android:padding="12dp"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/twitter"
            android:contentDescription="Twitter"
            android:background="@drawable/circle_background1"
            android:padding="12dp"
            android:layout_margin="8dp" />
    </LinearLayout>




</RelativeLayout>

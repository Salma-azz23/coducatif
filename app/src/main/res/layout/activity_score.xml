<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreActivity"
    android:padding="24dp"
    android:background="#E8F0FE">

    <!-- Title Text -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰ FÃ©licitations ! ðŸŽ‰"
        android:textSize="20sp"
        android:textColor="#D84315"
        android:fontFamily="monospace"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sub-title -->
    <TextView
        android:id="@+id/congratsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre performance dans le jeu :"
        android:textSize="20sp"
        android:textColor="#5D4037"
        android:fontFamily="monospace"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/scoreTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Score Display -->
    <TextView
        android:id="@+id/performanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#FF5722"
    android:fontFamily="monospace"
    android:layout_marginTop="16dp"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/congratsTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />


    <!-- Performance Value -->
    <TextView
        android:id="@+id/scoreDisplayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:textColor="#37474F"
        android:fontFamily="monospace"
        android:shadowColor="#FFA726"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/performanceTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Retry Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ RÃ©essayer"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#00796B"
        android:fontFamily="monospace"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        android:elevation="8dp"
        app:cornerRadius="25dp"
        app:layout_constraintTop_toBottomOf="@id/scoreDisplayTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Trophy Image -->
    <ImageView
        android:id="@+id/trophyImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Trophy"
        android:src="@drawable/ic_trophy1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_retry" />

</androidx.constraintlayout.widget.ConstraintLayout>

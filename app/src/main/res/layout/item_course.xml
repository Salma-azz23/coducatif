<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/item_background"
    android:elevation="4dp"
    android:layout_marginBottom="12dp">

    <!-- En-tête de section -->
    <TextView
        android:id="@+id/sectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2B7B8C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:visibility="gone"
        android:background="#E8F1FF" />

    <!-- Contenu du cours -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image du cours -->
        <ImageView
            android:id="@+id/courseImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_course_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:contentDescription="Image du cours"
            android:background="@drawable/rounded_button"
            android:elevation="2dp" />

        <!-- Informations sur le cours -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Catégorie -->
            <TextView
                android:id="@+id/Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="React JS"
                android:textColor="#FF5722"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/category_background"
                android:padding="4dp"
                android:layout_marginBottom="4dp" />

            <!-- Nom du cours -->
            <TextView
                android:id="@+id/Course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Framework de JavaScript"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <!-- Prix et évaluation -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7058/-"
                    android:textColor="#2B7B8C"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 4.2   |   7830 Std"
                    android:textColor="#888"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Icône de signet -->
        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_bookmark_24"
            android:contentDescription="Signet"
            android:tint="#888"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>

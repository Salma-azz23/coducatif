<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:padding="16dp">

    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back Button"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentors"
            android:textColor="#2B7B8C"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_search_background"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search Icon"
            android:tint="#888" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search Mentors"
            android:textColor="#000"
            android:textColorHint="#888"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_filter_24"
            android:contentDescription="Filter Icon"
            android:tint="#888" />
    </LinearLayout>

    <!-- Buttons for Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Button: Courses -->
        <Button
            android:id="@+id/tabcourses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Courses"
            android:textSize="14sp"
            android:textColor="#202244"
            android:backgroundTint="#E8F1FF"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp" />

        <!-- Button: Mentors -->
        <Button
            android:id="@+id/tabmentors"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mentors"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2B7B8C"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp" />
    </LinearLayout>

    <!-- "Results for ..." Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Result "
        android:textSize="14sp"
        android:textColor="#000"
        android:fontFamily="sans-serif-medium" />

    <!-- List of Mentors -->

    <ImageView
        android:id="@+id/kar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/kar"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:padding="0dp" /> <!-- Suppression totale de tout espacement -->

    <ImageView
        android:id="@+id/aman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/aman"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="0dp"
        android:padding="0dp" /><!-- Suppression totale de tout espacement -->

    <ImageView
        android:id="@+id/jama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jama"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="0dp"
        android:padding="0dp" /><!-- Suppression totale de tout espacement -->
    <ImageView
        android:id="@+id/rob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/rob"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="0dp"
        android:padding="0dp" />
    <ImageView
        android:id="@+id/john"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/john1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_margin="0dp"
        android:padding="0dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:itemIconTint="#2B7B8C"
        app:itemTextColor="#2B7B8C"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />


</LinearLayout>

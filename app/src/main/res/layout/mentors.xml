<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:padding="16dp">




    <!-- Header with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentors"
            android:textColor="#2B7B8C"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_search_background"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:hint="Rechercher des Mentors..."
            android:background="@drawable/rounded_button"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#000"
            android:textSize="14sp"
            android:drawableStart="@drawable/baseline_search_24" />
    </LinearLayout>

    <!-- Buttons for Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp">

        <!-- Button: Courses -->
        <Button
            android:id="@+id/tabcourses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cours"
            android:textSize="14sp"
            android:textColor="#202244"
            android:backgroundTint="#E8F1FF"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp" />

        <!-- Button: Mentors -->
        <Button
            android:id="@+id/tabmentors"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mentors"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2B7B8C"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp" />
    </LinearLayout>

    <!-- "Results for ..." Section -->







    <androidx.cardview.widget.CardView
        android:id="@+id/course9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Course Image -->
            <ImageView
                android:id="@+id/course"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/men2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:contentDescription="Course Image"
                android:background="@drawable/rounded_button"
                android:elevation="2dp" />

            <!-- Course Information -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Categorys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YASSINE ABHIR"
                    android:textColor="#FF5722"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/category_background"
                    android:padding="4dp"
                    android:layout_marginBottom="4dp" />

                <!-- Course Name -->
                <TextView
                    android:id="@+id/Courses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expert en Spring Boot et React js |Expert en Microservices "
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <!-- Price and Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Rat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐⭐⭐⭐⭐"
                        android:textColor="#888"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>

            <!-- Bookmark Icon -->
            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_bookmark_24"
                android:contentDescription="Bookmark"
                android:tint="#888"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


